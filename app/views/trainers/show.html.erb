<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>

<h2>Create Pokemon</h2>
<p>
  <% if @trainer.id == current_trainer.id%>
    <%= button_to "Create Pokemon", pokemon_new_path, :class => "button medium", :method => :get %>
  <%end%>
</p>

<h2>POKEMONS</h2>
<ol>
  <% @trainer.pokemons.each do |poke| %>
    <li>
      <ul>
        <li>Name: <%= poke.name %></li>
        <li>Level: <%= poke.level %></li>
        <li>Health: <%= poke.health %></li>
      </ul>
    </li>
      <%= button_to "Damage!", damage_path(hit: poke), :class => "button medium", :method => :patch %>
  <%end%>
</ol>
